<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Loan_IT.MainPage"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                x:Name="WelcomeLabel"
                Text="Welcome!"
                FontSize="24"
                HorizontalOptions="Center"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            
            <Button
                x:Name="UserInfoButton"
                Text="User Info" 
                Clicked="OnUserInfoClicked" />

            <Button
                x:Name="MortgageInputButton"
                Text="Enter Mortgage Details"
                Clicked="OnMortgageInputClicked"/>

            <Button
                x:Name="MortgagesRecordsButton"
                Text="Saved Mortage Records"
                Clicked="OnMortgagesRecordsClicked"/>

            <Button
                x:Name="LogoutButton"
                Text="Logout"
                BackgroundColor="Red"
                TextColor="White"
                Clicked="OnLogoutClicked" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
