<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Loan_IT.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Loan_IT"
    xmlns:views="clr-namespace:Loan_IT.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Loan_IT">

    <ShellContent 
    Title="Login"
    ContentTemplate="{DataTemplate views:LoginPage}"
    Route="LoginPage" />

    <ShellContent Title="Register"
              Route="RegisterPage"
              ContentTemplate="{DataTemplate views:RegisterPage}" />
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="User Info"
        ContentTemplate="{DataTemplate views:UserInfoPage}"
        Route="UserInfoPage" />

    <ShellContent
        Title="Mortgage Input"
        ContentTemplate="{DataTemplate views:MortgageInputPage}"
        Route="MortgageInputPage" />

    <ShellContent
        Title="Saved Mortgages"
        ContentTemplate="{DataTemplate views:MortgagesResultsPage}"
        Route="MortgagesResultsPage" />

    <ShellContent
        Title="Approval Result"
        ContentTemplate="{DataTemplate views:ApprovalResultPage}"
        Route="ApprovalResultsPage" />

</Shell>
